<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_16sdp"
    app:cardElevation="@dimen/_15sdp"
    android:layout_margin="@dimen/_15sdp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:background="#66b2b2">

    <ImageView
        android:id="@+id/prosthetic_image_row"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_15sdp"
        android:src="@mipmap/ic_launcher"
        android:layout_weight="2"/>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/_16sdp"
            app:cardElevation="@dimen/_10sdp"
            app:cardUseCompatPadding="true"
            android:layout_weight="5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#b2d8d8"
        >

        <TextView
            android:id="@+id/prosthetic_name_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textSize="@dimen/_13sdp"
            android:textStyle="italic|bold|normal"
            android:text="Prosthetic name"/>

        <TextView
            android:id="@+id/prosthetic_trademark_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic|normal"
            android:text="Trademark"/>


    </LinearLayout>
        </androidx.cardview.widget.CardView>



</LinearLayout>

</androidx.cardview.widget.CardView>